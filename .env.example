# Twitch API Configuration
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_PRIVATE_KEY_ID=your_private_key_id_here
FIREBASE_PRIVATE_KEY=your_private_key_here
FIREBASE_CLIENT_EMAIL=your_client_email_here
FIREBASE_CLIENT_ID=your_client_id_here
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=your_client_x509_cert_url_here

# Discord Configuration (Optional)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
NEXT_PUBLIC_DISCORD_SHOUTOUT_CHANNEL_ID=your_discord_channel_id_here
NEXT_PUBLIC_DISCORD_LOG_CHANNEL_ID=your_discord_log_channel_id_here

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3100

# Twitch User Configuration
NEXT_PUBLIC_HARDCODED_ADMIN_TWITCH_ID=your_twitch_user_id_here
NEXT_PUBLIC_TWITCH_CLIENT_ID=your_twitch_client_id_here
NEXT_PUBLIC_TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# Google AI Configuration (for AI features)
# Preferred for Genkit:
GOOGLE_GENAI_API_KEY=your_google_ai_api_key_here
# Back-compat: if you already use this name, the app maps it to GOOGLE_GENAI_API_KEY
GEMINI_API_KEY=

# YouTube API Configuration (for YouTube Live integration)
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:3100/api/auth/youtube/callback

# WebSocket Server Configuration
WS_PORT=8090
NEXT_PUBLIC_STREAMWEAVE_URL=http://localhost:3100

# OBS WebSocket (OBS v28+ / obs-websocket v5)
# Example: ws://127.0.0.1:4455
OBS_WS_URL=ws://127.0.0.1:4455
# Leave blank if you have no password set in OBS
OBS_WS_PASSWORD=
